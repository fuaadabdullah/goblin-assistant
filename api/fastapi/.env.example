# Environment variables for Goblin Assistant FastAPI
# Copy this file and rename to .env, then add your actual API keys

# OpenAI API Key (required for embeddings and chat)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Optional: Other API keys for routing
ANTHROPIC_API_KEY=your_anthropic_key_here
GEMINI_API_KEY=your_gemini_key_here

# Datadog APM (optional)
DD_AGENT_HOST=localhost
DD_TRACE_AGENT_PORT=8126
DD_SERVICE=goblin-assistant-api
DD_ENV=dev

# Redis (optional, for polling store)
REDIS_URL=redis://localhost:6379

# Debug mode
DEBUG=true
