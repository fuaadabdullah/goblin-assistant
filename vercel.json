{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/assets/(.*)",
      "dest": "/assets/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "outputDirectory": "dist",
  "ignoreCommand": "rm -rf api",
  "env": {
    "VITE_FASTAPI_URL": "https://goblin-assistant-backend.onrender.com",
    "VITE_API_URL": "https://goblin-assistant-backend.onrender.com"
  }
}
