# Production Environment Variables for Goblin Assistant
# Copy this to your production environment and set appropriate values

# Datadog Configuration
DD_API_KEY=your_production_datadog_api_key_here
DD_APP_KEY=your_production_datadog_app_key_here
DD_ENV=prod
DD_SERVICE=goblin-assistant-api
DD_VERSION=1.0.0
DD_SITE=datadoghq.com

# Agent Configuration
DD_AGENT_HOST=localhost
DD_TRACE_AGENT_PORT=8126
DD_DOGSTATSD_PORT=8125

# Application Configuration
ENV=production
VITE_GOBLIN_RUNTIME=fastapi
VITE_FASTAPI_URL=https://your-production-domain.com/api

# Database (if using Supabase or other)
SUPABASE_URL=your_supabase_url
SUPABASE_ANON_KEY=your_supabase_anon_key

# AI Provider Keys (Production keys)
ANTHROPIC_API_KEY=sk-ant-prod-...
OPENAI_API_KEY=sk-prod-...
GEMINI_API_KEY=AIza-prod...
GROK_API_KEY=xai-prod-...

# Redis (if using for queues)
REDIS_URL=redis://localhost:6379

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Security
SECRET_KEY=your-production-secret-key-here
CORS_ORIGINS=https://your-production-domain.com

# Performance
MAX_WORKERS=4
REQUEST_TIMEOUT=30
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60
