{
  "name": "Goblin Queue Depth Growing",
  "type": "query alert",
  "query": "avg(last_1m):avg:goblin.worker.queue_depth{env:prod} > 50",
  "message": "Worker queue depth is {{value}} (threshold: 50) for the last minute. Processing may be backed up. @slack-goblin-alerts",
  "tags": ["service:goblin-worker", "env:prod", "severity:p1"],
  "options": {
    "thresholds": {
      "critical": 50,
      "warning": 25
    },
    "notify_no_data": false,
    "renotify_interval": 5,
    "timeout_h": 1,
    "evaluation_delay": 60,
    "new_host_delay": 300,
    "include_tags": true,
    "require_full_window": false
  },
  "priority": 1
}
